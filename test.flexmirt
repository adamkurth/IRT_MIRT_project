<Project>
Title = "My First FlexMIRT Program"; // A descriptive title for your simulation project
Description = "This simulation study explores item response data generated using the Two-Parameter Logistic (2PL) model.";

<Options>
Mode = Simulation; // Setting the mode to Simulation for generating synthetic item response data

<Groups>
// Define your simulation group
%G1%
File = "/c/Users/k33go/Documents/vscode/test.flexmirt"; // Path for output, not used in simulation but required for syntax
Varnames = v1-v20; // Naming 20 variables/items to be simulated
N = 1000; // Defining the sample size for the simulation
Ncats(v1-v20) = 2; // Indicating dichotomous items with 2 response categories each
Model(v1-v20) = TwoPL; // Applying the TwoPL model to all items

<Simulation>
Reps = 1; // Setting the number of replications to 1 for this simulation
Seed = 12345; // Specifying a random seed for reproducibility
Groups = 1; // Number of groups in the simulation, corresponding to the %G1% group defined earlier
Respondents = 1000; // Setting the number of simulated respondents
Items = 20; // Indicating the total number of items to be included in the simulation

<ItemParameters>
Model = TwoPL; // Specifying that the TwoPL model is used for parameter generation
a(1-20) = 0.5-1.5; // Item discrimination parameters, randomly varied between 0.5 and 1.5
b(1-20) = -2.0-2.0; // Item difficulty parameters, randomly varied between -2.0 and 2.0

<Output>
Parameters = Yes; // Requesting output of the true item parameters used in the simulation
Responses = Yes; // Requesting output of the simulated item responses
Summary = Yes; // Requesting output of summary statistics for the simulation

<Constraints>
// Applying constraints to item parameters if necessary
b(1) = 0; // Fixing the difficulty parameter of the first item at 0
